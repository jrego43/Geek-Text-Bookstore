class BookSerializer(serializers.ModelSerializer):
  class Meta:
    model = Book
    fields = ['id', 'name', 'price', 'description']
    
class AuthorSerializer(serializers.ModelSerializer):
  class Meta:
    model = Author
    fields = ['id', 'name', 'age']
    
class GenreSerializer(serializers.ModelSerializer):
  class Meta:
    model = Genre
    fields = ['id', 'name']
